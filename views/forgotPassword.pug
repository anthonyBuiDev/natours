extends base

block content
    main.main
        .login-form
            h2.heading-secondary.ma-bt-lg Reset your password
            p.desc Enter your email address and we will send you instructions to reset your password.
            form.form.form--forgotPassword
                .form__group
                    label.form__label(for='email') Email address
                    input#email.form__input(type='email' placeholder='you@example.com', required)
                .form__group
                    button.btn.btn--green.btn--forgot Send Email